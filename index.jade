doctype html
html
  head
    //CONTENT METAS
    meta(http-equiv = "Content-Type" content = "text/html" charset = "utf-8")
    meta(name = "viewport" content = "width=device-width, initial-scale=1.0")
    
    title H E A D R
  
    //FAVICON
    link(rel="icon" type="image/ico" href="images/favicon.ico")
  
    //STYLE
    link(href = "css/app.css"   type = "text/css" rel = "stylesheet")
    
    //FONT
    link(href='https://fonts.googleapis.com/css?family=Open+Sans:300,400,600' rel='stylesheet' type='text/css')
    
    //ANIMATE WOW
    link(rel = "stylesheet" href = "css/animate.css")

    //MODERNIZR
    script(src = "bower_components/modernizr/modernizr.js")
    
    //INITIALIZE WOW
    script( src = "js/wow.min.js")
    script new WOW().init()
    
  body(onload="changeImage()").wow.fadeIn
    header
      .blur-bg
      .fullWidth.wow.fadeInUp
        .logo
          img(src = "images/Logo.png")
        .small-12.columns.intro
          h1.title.narrow.up Howdy, Partner!
        .small-12.columns.intro
          hr
        .small-12.columns.intro
          h2.title.narrow.up Isn't it beautiful, is it ?
        .small-12.columns.intro
          h3.narrow You are one-click-away from getting <br>this stunning Headr
        .small-12.columns.intro
          h5.narrow <br><br><i>P.S. Try to refresh me...</i>
    section.blocky.content
      .fullWidth.wow.fadeInUp
        .large-4.columns.show-for-large-up
          hr.grey.right
        .large-4.medium-12.columns
          h2.title.narrow.up Interesting ?
        .large-4.medium-12.columns
          hr.grey.left.show-for-large-up
          hr.grey.show-for-medium-only
          hr.grey.show-for-small-only
        
      
  //SCRIPTS
  //JQUERY
  script(src = "bower_components/jquery/dist/jquery.min.js")
              
  //JQUERY EASING
  script( src = "http://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js")
              
  //FOUNDATION
  script(src = "bower_components/foundation/js/foundation.js")
              
  //APP
  script(src = "js/app.js")
  
  //SCROLL EFFETCS
  script(src = "js/scroll.js")
  
  //ONLOAD IMAGE CHANGE
  script(src = "js/imageChanger.js")
